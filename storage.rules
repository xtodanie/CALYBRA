rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if the requesting user belongs to the tenant.
    // It reads the user's document from Firestore.
    function isSameTenant(tenantId) {
      return get(/databases/(default)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }

    // Path for tenant-specific files.
    // e.g. /tenants/{tenantId}/monthCloses/{monthCloseId}/...
    match /tenants/{tenantId}/{path=**} {
      allow read, write: if request.auth != null && isSameTenant(tenantId);
    }

    // Default deny all other paths.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
