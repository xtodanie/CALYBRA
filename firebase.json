{
  "functions": [
    {
      "source": "calybra-database",
      "codebase": "calybra-database",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "host": "127.0.0.1",
      "port": 9099
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8085
    },
    "functions": {
      "host": "127.0.0.1",
      "port": 5001
    },
    "hub": {
      "host": "127.0.0.1",
      "port": 4401
    },
    "logging": {
      "host": "127.0.0.1",
      "port": 4501
    },
    "storage": {
      "host": "127.0.0.1",
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "host": "127.0.0.1",
      "port": 4001
    },
    "singleProjectMode": true
  }
}
